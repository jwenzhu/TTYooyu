<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="@string/app_user_tools"/>

    <TextView
        android:id="@+id/tv_examineOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:layout_alignParentRight="true"
        android:text="@string/app_user_all_tools"/>
    <com.ttyooyu.market.ui.widget.MyGridView
        android:id="@+id/mgv_tools"
        android:layout_below="@id/tv_examineOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>
