<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="10dp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/cb_select"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@mipmap/icon_temp2"/>
    <TextView
        android:id="@+id/tv_productInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_product"
        android:padding="5dp"
        android:text="来自中国的红顶金鱼，可爱的外表让他成为世界各地的宠儿"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_product"
        android:padding="10dp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:text="￥188"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_reduce_press"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="00"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_plus_press"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGray"
        />
</RelativeLayout>